{
  "name": "backend-api",
  "version": "0.2.10",
  "description": "Backend Rest API for AriseForChrist Mobile App",
  "main": "app.js",
  "author": "DanielBot",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/arctec/arise4c/backendApi.git"
  },
  "scripts": {
    "start": "set NODE_ENV=dev&& npm run build && npm run watch-node",
    "build": "npm run build-ts && npm run tslint && npm run copy-static-assets",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "set NODE_ENV=dev&& concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "//TEST": "DON'T FORGET TO SET [DB_MIGRATE_ENV]",
    "test": "set NODE_ENV=test&& set DB_MIGRATE_ENV=test&& npm run db-create && npm run test-run-tests",
    "test-run-tests": "mocha --timeout 5000 -r ts-node/register src/test/*.ts --exit",
    "//DB-CREATE": "WHEN RUNNING DB-CREATE SPECIFY THE ENV VARIABLE [DB_MIGRATE_ENV] TO THE DESIRED ENVIRONMENT(THIS IS UNTIL WE FIND A FIX).",
    "db-create": "npm run db-create-schema && npm run db-upgrade",
    "db-create-schema": "db-migrate up --config ./db/database.json --migrations-dir ./db/schema --verbose",
    "db-upgrade": "db-migrate up --config ./db/database.json --migrations-dir ./db/upgrades --verbose",
    "watch-test": "npm run test --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
